{
  "version": 2,
  "target_type": "raspberrypi-bookworm",
  "boards": [
    "RSPi3B",
    "RSPiCM3",
    "RSPi3BPlus",
    "RSPi3APlus",
    "RSPiCM3Plus",
    "RSPi4B",
    "RSPiCM4",
    "RSPi5B"
  ],
  "devices": [
    {
      "type": "videocore"
    },
    {
      "type": "framebuffer",
      "device": [
        "/dev/fb0"
      ],
      "required": false
    },
    {
      "type": "other",
      "device": [
        "/dev/video10"
      ],
      "required": false
    }
  ],
  "network_mode": "bridge"
}
